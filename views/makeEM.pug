extends layout

block meta
    title= 'Admin: Add EM - Innovision, NSIT'

block content
    .container
        .row
            h3.intro Add Event Managers
            form.col.s12(role="form" action="/users/addEM" method="post")
                if msg
                    h5= msg
                .input-field.col.s8.m7
                    input(type='text', id="inno_ids" name="inno_ids" required=true)
                    label(for="inno_ids") Enter INNO IDs(comma separated)

                button.btn.waves-effect.waves-light(type="submit") Add
block style
    style
        include ../public/assets/stylesheets/pages/about.css